<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.genimous.peopleoutsourcing.activity.MainActivity">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_permissionActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/textView_permissionActivity"
        style="@style/Text.Normal.White"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_12"
        android:drawableLeft="@drawable/backarrow"
        android:drawablePadding="@dimen/dp_5"
        android:gravity="center_vertical"
        android:text="@string/item_permissions_text" />

</RelativeLayout>
